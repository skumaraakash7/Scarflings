<section class="subscription_information" id="section_k_{{ section.id }}">
 <div class="container">
  	<div class="row">
    	
       		<div class="col-md-12 simpletext">
              <div class="subscription_notes">
               <h3 class="before_subscription">{{ section.settings.subscription_intro_heading }}</h3>
               <p class="before_subscription mobile_only"><span class="available">{{ section.settings.subscription_box_avail }}</span></p>
               <p class="before_subscription">{{ section.settings.subscription_intro_para }}<span class="available desktop_only"> {{ section.settings.subscription_box_avail }}</span></p>
               <h3 class="after_subscription">{{ section.settings.subscription_form_after_heading }}</h3>
                <p class="reservePara stock after_subscription"><b>{{ section.settings.subscription_welcome_text }}</b></p>
               <p class="reservePara after_subscription">{{ section.settings.subscription_form_date }}</p>
              </div>
                 <div class="row features">
                  <div class="col-12 col-md-4">
                    <div class="sub_features" >
                      <img src="{{ section.settings.plan_features_image_one | img_url: 'master'}}">
                      <p>{{ section.settings.plan_features_text_one }}</p>
                    </div>
                  </div>
                  <div class="col-12 col-md-4">
                    <div class="sub_features" >
                      <img src="{{ section.settings.plan_features_image_two | img_url: 'master'}}">
