<style>
  #shopify-section-welcome-video {
      padding: 100px 0px 80px 0px;
  }
  .videoInnerSection {
    padding: 0px 150px 60px 150px;
  }
  .videoInnerSection iframe {
      width: 100%;
      height: 450px;
       position: relative;
  }
  .videoSection p {
      padding: 0px 70px;
  }
  @media (min-width: 768px) and (max-width: 991px){
    .videoInnerSection iframe {
        width: 100%;
        height: 350px;
    }
    #shopify-section-welcome-video {
        padding: 50px 0px 60px 0px;
    }
    .videoInnerSection {
        padding: 0px 80px 20px 80px;
    }
    
  }
  @media (max-width: 767px){
  	.videoInnerSection {
        padding: 0px 0px 30px 0px;
        text-align: center;
    }
    #shopify-section-welcome-video {
        padding: 50px 0px 50px 0px;
    }
    .videoInnerSection iframe {
        width: 350px;
        height: 225px;
        max-width: 100%;
    }
    .videoSection p {
        padding: 0px 0px;
        text-align: center;
    }
  }
  @media (max-width: 400px){
  	.videoInnerSection {
        padding: 20px 0px 0px 0px;
        text-align: center;
    }
    #shopify-section-welcome-video {
        padding: 0px 0px 0px 0px;
    }
  }
</style>
<section class="videoSection">
  <div class="container">
    <div class="videoInnerSection">
      <iframe src="{{ section.settings.video}}" width="640" height="360" frameborder="0" allow="autoplay; fullscreen" allowfullscreen></iframe>
      </div>
      <p>{{ section.settings.about_founder}}</p>
  </div>
</section>

{% schema %}
  {
    "name": "Video Content",
    "settings": [
      {
        "id": "video",
        "type": "text",
        "label": "Video url"
      },
		{
		"id": "about_founder",
        "type": "text",
        "label": "About Founder"
		}
    ]
  }
{% endschema %}

