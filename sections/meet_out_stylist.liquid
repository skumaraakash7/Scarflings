{% schema %}
  {
    "name": "Meet Our Stylist",

	
	"settings": [
	 {
        "id": "section_title",
        "type": "text",
        "label": "Section Title",
        "default": "Title"
      },
		
	{
      "id": "link",
      "type": "url",
      "label": "Button link"
    	},
	{
      "id": "linktext",
      "type": "text",
      "label": "Button text",
      "default": "Read More"
    },
	{
      "id": "user_card_bg",
      "type": "image_picker",
      "label": "User Card Backround"


      },
	 {
      "id": "user_card_bg_mobile",
      "type": "image_picker",
      "label": "User Card Backround Mobile"


      }
     
	
	],
	"max_blocks": 100,
	"blocks": [
	
      {
        "type": "slideshow",
        "name": "Stylist",

        "settings": [

		{
		"id": "is_active",
        "type": "checkbox",
        "label": "Is Active"
		

		},

		{
        "id": "user_title",
        "type": "text",
        "label": "User Title",
        "default": "Title"
      },
	  {
        "id": "user_radio_btn_val",
        "type": "text",
        "label": "User Button Value",
        "default": "Title"
      },
	  {
        "id": "user_radio_btn_text",
        "type": "text",
        "label": "User Button Text",
        "default": "Title"
      },
		{
		 "id": "user_button_link",
        "type": "text",
        "label": "User Button Link",
        "default": "Title"
      },
	
         
      {
        "id": "user_bio_txt",
        "type": "html",
        "label": "User Bio",
        "default": "<p>Add your text here</p>"
      },
		{
		"id": "user_image_position",
        "type": "radio",
        "label": "Profile Image Position",
		"options": [ 
		{"value" :"left"},
		{"value":"right"} 
		
		]
		
		},
		{
		"id": "user_image",
        "type": "image_picker",
        "label": "Profile Image"
		},
		{
		"id": "user_product",
        "type": "product",
        "label": "Product"
		

		}
		
		
        ]
      }
    ]


  
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

