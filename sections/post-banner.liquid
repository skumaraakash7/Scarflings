<style>
.FirstSectImage{
background-repeat:no-repeat;
}
.postBannersection {
    padding: 0px;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
}
.postBannersection p:last-child{
margin-bottom:0px;
}
.postBannersection .row {
    padding: 0px;
    width: 850px;
    margin: 0 auto;
  	max-width: 100%;
}
section#section_k_post-banner {
    padding: 0px 0px 0px 0px;
}
.FirstSectImage {
    background-size: contain;
    background-position: 60px bottom !important;
    background-repeat: no-repeat;
}
.postBannersection .simpletext {
    padding: 100px 0px 90px 0px;
}
.postBannersection h2 {
    margin-bottom: 7px;
}
.postBannersection .row {
    padding: 0px;
    width: 900px;
    margin: 0 auto;
    max-width: 100%;
}
@media (min-width:768px) and (max-width:991px){
.postBannersection .simpletext p{
font-size:15px!important;
}
.postBannersection .simpletext{
padding:50px 0px 50px 0px;
}
}


@media (max-width:767px){


.postBannersection .row {
    padding: 20px 0px 0px 0px;
    margin: 0px -20px !important;
    width: auto;
    max-width: unset;
}

.postBannersection .simpletext {
    padding: 50px 0px 30px 0px;
}
}

@media (min-width:768px){

.postBannersection .FirstSectImage{
margin-top:20px!important;
}
}

</style>
<section class="page_content_section postBannersection p-t-66 p-b-38" id="section_k_{{ section.id }}" style="background-image:url('{{ section.settings.bg_image | img_url: 'master' }}')" >
<div class="container">
   <div class="row">
    <div class="col-7 col-md-7 col-lg-6">
      <div class="simpletext">
        <h2> {{ section.settings.left_heading }} </h2>
        <p> {{ section.settings.left_text }} </p>
      </div>
    </div>
    <div class="col-5 col-md-5 col-lg-6 FirstSectImage" style="background-image:url('{{ section.settings.image_right | img_url: 'master' }}')" >
    </div>      
   </div>
  </div>
</section>
{% schema %}
  {
    "name": "Banner",
    "settings": [
	  {
        "id": "left_heading",
        "type": "html",
        "label": "Heading",
        "default": "<p>Add your text here</p>"
      },
      {
        "id": "left_text",
        "type": "html",
        "label": "Description",
        "default": "<p>Add your text here</p>"
      },
		{
		"id": "bg_image",
        "type": "image_picker",
        "label": "Background"
		},
		{
		"id": "image_right",
        "type": "image_picker",
        "label": "Image"
		}	
    ]
  }
{% endschema %}

