<section class="planSelectSection step2">
    <div class="container">
      <div class="step_title">
          <p class="step_label">Step 2.</p><h3 class="step_name">{{ section.settings.step2_name }}</h3>
      </div>
      <div class="row planSlider">
            {% for block in section.blocks %}
               {% assign p = all_products[ block.settings.plan ]%}
            <div class="col-md-4 Plan" id="Plan_{{ block.id }}"> 
                <div class="PlanInner ScarfCategory" id="{{ p.handle }}" data-scarf-category="{{ p.title }}">

                  {% if block.settings.plan_ribbon_text != "" %}

                  <div class="ribbon" style="background-color:{{ block.settings.plan_ribbon_bg_color }};color:{{ block.settings.plan_ribbon_txt_color }}"><span>{{ block.settings.plan_ribbon_text }} </span></div>

                  {% endif %}



                  <h5 class="productTitle">{{ p.title }}</h5>

                  <div class="plan_image">
                    <img src="{{ p | img_url : 'master'}}" class="img-fluid">
                    <img src="{{ block.settings.plan_features_hover_image | img_url: 'master'}}" class="hover_img">
                  </div>

                  <p>{{ p.description }}</p>

                  <div  style="display:none;" class="monthly_btn">
                    {{  block.settings.plan_monthly_button  }}
                  </div>

                  <div  style="display:none;" class="yearly_btn">
                    {{  block.settings.plan_yearly_button  }}
                  </div>
                  <div class="que_btn_sec">
                    <p>Still unsure?</p>
                    <a href="javascript:void" class="scroll_to_questionnaire">Take our style questionnaire</a>
                  </div>
              </div>   

            </div> 
            {% endfor %}
          </div>
      </div>
  
</section> 
<script>
  $(document).ready(function(){
  	$("#shopify-section-subscription-step2 .planSelectSection button").append("<img src='{{ section.settings.plan_features_buton_emoji | img_url: 'master'}}'>");
  });
  
</script>

{% schema %}
{
  "name": "Step 2",
	"max_blocks": 3,
  "settings": [
   {
        "id": "step2_name",
        "type": "text",
        "label": "Step2 name"
      },
		{
          "id": "plan_features_buton_emoji",
          "type": "image_picker",
          "label": "Button emoji"
        }
   ],
  "blocks": [
    {
      "type": "select",
      "name": "Add Plan",
      "settings": [
        {
          "id": "plan",
          "type": "product",
       		"label": "Plan"
        },
		{
          "id": "plan_features_hover_image",
          "type": "image_picker",
          "label": "Plan features hover image"
        },
        {
          "id": "plan_monthly_button",
          "type": "html",
          "label": "Subscribe Monthly Button",
          "default": "Subscribe Now"
        },
        {
          "id": "plan_yearly_button",
          "type": "html",
          "label": "Subscribe Yearly Button",
          "default": "Subscribe Now"
        },
		{
          "id": "plan_ribbon_text",
          "type": "text",
          "label": "Ribbon text"
          
          
        },
        {
          "id": "plan_ribbon_bg_color",
          "type": "color",
          "label": "Ribbon Background color",
          "default": "#000000"
        },{
          "id": "plan_ribbon_txt_color",
          "type": "color",
          "label": "Ribbon text color",
          "default": "#ffffff"
        }
      ]
    }
  ]
}
{% endschema %}

