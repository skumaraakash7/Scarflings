<style>
#shopify-section-about-right-image-section {
    padding: 0px 0px 100px 0px;
}
.bottomBg {
    background-size: 400px;
    position: absolute;
    top: -55px;
    width: 400px;
    right: 0px;
    height: 450px;
    background-position: calc(100% - -96px) 0px;
    z-index: 1;
    background-repeat: no-repeat;
}
#shopify-section-about-right-image-section{
    position: relative;
}

.roundImageinner p span {
    color: #b44b2b;
    font-weight: bold;
}
  #shopify-section-about-right-image-section span.or {
    text-align: center;
    padding: 12px 0px;
    font-weight: bold;
}
  
  #shopify-section-about-right-image-section .simpletext a.btn.take_ques_btn:hover {
    border: 1px solid #b57a23;
    background: #b57a23 !important;
    color: #fff !important;
    margin: 0px !important;
}
  #shopify-section-about-right-image-section .chatButton {
    display: flex;
    width: 300px;
    flex-direction: column;
    max-width: 100%;
    margin: 10px 0px 0px 0px;
}
#shopify-section-about-right-image-section .simpletext a.btn.take_ques_btn {
    border: 1px solid #c3862b;
    background: #c3862b !important;
    color: #ffffff !important;
    margin: 0px !important;
}
.roundRightImage .roundImageinner {
    display: flex;
    padding-right: 0px;
    align-items: center;
    width: 100%;
}
.roundRightImage .roundImageinner .simpletext h2 {
    width: auto;
    text-align: left !important;
    max-width: 100%;
}
.roundRightImage .simpletext {
    padding-right: 60px;
}
.commonSection img {
    width: auto;
  	height: 470px;
}
.right_image_col{
  width: auto;
    height: auto;
    max-width: 100%;
    position: relative;
    z-index: 9;
    top: 15px;
    margin-right: 20px;
}
