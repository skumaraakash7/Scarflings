    width: 200px;
    right: 00px;
    background-position: calc(100% - -55px) 50px;
}
.roundRightImage .roundImageinner .simpletext h2 {
    text-align: center !important;
  	margin-bottom: 25px !important
}
.roundRightImage .roundImageinner .simpletext p {
    text-align: left !important;
}
.right_image_col {
    width: 100%;
    height: auto;
    max-width: 100%;
    margin-right: 0px;
