	.roundRightImage .roundImageinner .simpletext h2 {
		font-size: 18px !important;
	}
  
}
  
</style>
<section class="roundRightImage commonSection" id="section_k_{{ section.id }}">
    <div class="bottomBg" style="background-image:url('{{ section.settings.about_bottom_bg | img_url: 'master' }}');
"></div>
	<div class="container">
    	<div class="roundImageinner">
            <div class="simpletext">
              <h2> {{ section.settings.about_round_left_heading }} </h2>
              <p>{{ section.settings.about_round_left_text }} </p>
              <div class="chatButton">
                <a href="https://scarflings.com/pages/book-stylist" class="btn">{{ section.settings.about_chatnow }}</a>
                <span class="or">OR</span>
                <a href="{{ section.settings.common_takequestions_url }}" class="btn take_ques_btn scrollToForm">{{ section.settings.common_takequestions }}</a>
              </div>
              
            </div>
          	<div class="right_image_col">
              <img src="{{ section.settings.about_round_image_right | img_url: 'master' }}">
              <div class="play_button">
					
                   <video id="vid" controls>
                      <source src="https://cdn.shopify.com/s/files/1/0070/0835/4356/t/69/assets/{{ section.settings.right_image_video }}" type="video/mp4">
                    </video>
                <img src="{{ 'white-play.png' | asset_url }}">
              </div>
          	</div>
       </div>
   </div>
</section>
