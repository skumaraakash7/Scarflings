
<section class="postmidsection1">
  <div class="topBg" style="background-image:url('{{ section.settings.post_top_bg | img_url: 'master' }}');"></div>
  	<div class="midBg" style="background-image:url('{{ section.settings.post_mid_bg | img_url: 'master' }}');"></div>  
    
  <div class="container">
    <div class="simpletext">
      <h3> {{ section.settings.post_sub_heading1 }} </h3>
      <p>{{ section.settings.post_left_text1 }} </p>
      <h3 class="second_point_heading"> {{ section.settings.post_sub_heading2 }} </h3>
      <p class="second_point_para">{{ section.settings.post_left_text2 }} </p>
  	</div>
  </div>
</section>
<section class="postmidsection2">
