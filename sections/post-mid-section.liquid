  <div class="container">
    <div class="simpletext">
       <h3> {{ section.settings.post_sub_heading3 }} </h3>
      <p>{{ section.settings.post_left_text3 }} </p>
      <h3> {{ section.settings.post_sub_heading4 }} </h3>
      <p>{{ section.settings.post_left_text4 }} </p>
      <p class="contact_text">{{ section.settings.contact_text }} </p>
      <a href="{{ section.settings.contact_button_url }}" class="btn btn--cta cpsgts"><img src='https://cdn.shopify.com/s/files/1/0070/0835/4356/t/69/assets/smiling-face-with-3-hearts.png?v=1586612736'>{{ section.settings.contact_button_text }}</a>
  	</div>
  </div>
</section>
