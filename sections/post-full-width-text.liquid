  {
    "name": "Full width Content",
    "settings": [
		{
		"id": "text",
        "type": "html",
        "label": "Text"
		},
		{
		"id": "mob_text",
        "type": "html",
        "label": "Text for mobile"
		}
    ]
  }
{% endschema %}

