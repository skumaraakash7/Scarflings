<section class="formSection" id="section_k_{{ section.id }}" style="background-image:url('{{ section.settings.form_bg_image | img_url: 'master' }}')">
 
	<div class="container">
      	<h2 class="mobile_only">Scarflings Influencer Program Application</h2>
        <h3 class="mobile_only">MY UNSCRIPTED JOURNEY <b>STARTS HERE</b></h3>
        
      <div class="appForm">
        <h2 class="desktop_only">Scarflings Influencer Program Application Form</h2>
        <h3 class="desktop_only">MY UNSCRIPTED JOURNEY <b>STARTS HERE</b></h3>
        {% form "contact", id: "influencer-form", class: "influencer-form",method: "post" %}
        
        {%- if form.posted_successfully? -%}
        <p class="note form-success">
          {{ 'contact.form.post_success' | t }}
        </p>
        {%- endif -%}
        {% assign error_order = "author, email, body, password, form" | split: ", " %}

{%- if form.errors -%}

  <div class="form-message form-message--error">
    <h2 class="h3 form-message__title " tabindex="-1" data-form-status>{{ 'contact.form.error_heading' | t }}</h2>
    <ul>
      {% for error in error_order %}
        {% for field in form.errors %}
          {% if error == field %}

            {% capture field_label %}
              {% case field %}
                {% when 'author' %}
                  {{ 'contact.form.name' | t }}
                {% when 'body' %}
                  {{ 'contact.form.message' | t }}
                {% else %}
                  {{ form.errors.translated_fields[field] }}
              {% endcase %}
            {% endcapture %}

            <li>
              {%- if field == 'form' -%}
                {{ form.errors.messages[field] }}
              {%- else -%}
                {% comment %} the href should match the input's id {% endcomment %}
                <a href="#{{ form_id }}-{{ field }}" class="form-message__link">{{ field_label | strip | capitalize }} {{ form.errors.messages[field] }}</a>
              {%- endif -%}
            </li>
          {% endif %}
        {% endfor %}
      {% endfor %}
    </ul>
  </div>
{%- endif -%}
        <div class="formStep formStep1 activeStep">
          <div class="field_group required_field 1">
            <input type="text" required name="contact[first_name]" placeholder="First name" onkeypress="return /[a-z]/i.test(event.key)">
          </div>
          <div class="field_group required_field 2">
            <input type="text" required name="contact[last_name]" placeholder="Last name" onkeypress="return /[a-z]/i.test(event.key)">
          </div>
          <div class="field_group required_field 3 mail_field">
            <input type="email" name="contact[email]" required placeholder="Email address">
            
          </div>
        </div>
        <div class="formStep formStep2">
          <div class="field_group required_field 1_1">
            <input type="text" required name="contact[country]" placeholder="Country">
          </div>
          <div class="field_group required_field 2_2">
            <input type="text" required name="contact[city]" placeholder="City">
          </div>
        </div>
        <div class="formStep formStep3">
          <div class="field_group half_group">
            <div class="field_group required_field 1_2">
            <input type="text"  name="contact[instagram_url]" placeholder="Instagram">
            </div>
            <div class="field_group required_field 2_3">
            <input type="text" name="contact[instagram_followers]" placeholder="Followers">
            </div>
          </div>
          <div class="field_group half_group">
            <div class="field_group">
            <input type="text" name="contact[facebook_url]" placeholder="Facebook">
            </div>
            <div class="field_group">
            <input type="text" name="contact[facebook_likes]" placeholder="Likes">
            </div>
          </div>
          <div class="field_group half_group">
            <div class="field_group">
            <input type="text" name="contact[youtube_url]" placeholder="Youtube">
            </div>
            <div class="field_group">
            <input type="text" name="contact[youtube_subscribers]" placeholder="Subscribers">
            </div>
          </div>
        </div>
        <div class="formStep formStep4">
          <div class="field_group required_field">
            <label>Average number of comments  (Per post for Youtube, Instagram, Facebook)</label>
            <input type="text" name="contact[average_no_of_comments]" required>
          </div>
          <div class="field_group required_field">
            <label>Average number of story views for Instagram, and Facebook</label>
            <input type="text" name="contact[average_no_of_story_views]" required>
          </div>
          <div class="field_group required_field">
            <label>Demographics (Age, sex, location)? </label>
            <input type="text" name="contact[demographics]" required>
          </div>
          <div class="field_group required_field">
            <label>Have you created sponsored content for other brands?</label>
            <textarea required name="contact[sponsored_content]"></textarea>
          </div>
          <div class="field_group">
            <label>Is there anything else youâ€™d like to share?</label>
            <textarea name="contact[anything_else]"></textarea>
          </div>
        </div>
         <div class="error" style="display:none;">
            <p>Please fill all the mandatory fields.</p>
          </div>
        
         <div class="mail_error" style="display:none;">
            	<p>Please enter valid email address</p>
          	</div>
          <div class="success" style="display:none;">
            <p>Form has been submitted successfully.</p>
          </div>
        <div class="bottomSection">
          <div class="stepNumber">
          <span>1</span> of 4
        </div>
          <div class="field_group submit_btn">
            <button type="submit" class="btn btn--cta cpsgts">SUBMIT<img src='{{ section.settings.form_button_emoji | img_url: 'master'}}'></button>
          </div>
        <div class="field_group submit_btn next_btn btn1">
            <a href="javascript:void(0)" class="btn btn--cta cpsgts">NEXT<img src='{{ section.settings.form_button_emoji | img_url: 'master'}}'></a>
          </div>
         
        </div>
        
          
          
        {% endform %}
      </div>
    	
   </div>
</section>
