  @media (max-width:400px){
  #section_k_new-influencer-banner-mob .right_image_col {
    width: 100%;

}
  }

</style>
<section class="page_content_section shipBannersection mobile_only p-t-66 p-b-38" id="section_k_{{ section.id }}" style="background-image:url('{{ section.settings.in_heading_bg_image_mob | img_url: 'master' }}')" >
<div class="container">
 
   <div class="row">
  
    <div class="col-12 FirstSectImage" >
      
      <div class="right_image_col">
              <img src="{{ section.settings.about_round_image_right_mob | img_url: 'master' }}">
              <div class="play_button">
					
                   <video id="vid" controls>
                      <source src="https://cdn.shopify.com/s/files/1/0070/0835/4356/t/69/assets/{{ section.settings.in_video_mob }}" type="video/mp4">
            	</video>
                <img src="{{ 'white-play.png' | asset_url }}">
              </div>
          	</div>
    
     </div>
     <div class="col-12">
      <div class="simpletext">
        <h2> {{ section.settings.in_banner_heading_mob }} </h2>
        <p> {{ section.settings.in_text_box_left_text_mob }} </p>
    <div class="hero_play_button">
     <video controls>
              <source src="https://cdn.shopify.com/s/files/1/0070/0835/4356/t/69/assets/{{ section.settings.in_video_mob }}" type="video/mp4">
            </video>
      <a href="javascript:void(0)" class="btn btn--cta cpsgts"> {{ section.settings.in_button_mob }} <img src='{{ section.settings.in_button_emoji_mob | img_url: 'master'}}'></a>
    </div>
	
      </div>
    </div>
     </div>
  </div>
</section>
{% schema %}
  {
    "name": "Influencer Banner mobile",
    "settings": [
	{
        "id": "in_banner_heading_mob",
        "type": "html",
        "label": "Heading",
        "default": "<p>Add your text here</p>"
      },
		{
		"id": "in_heading_bg_image_mob",
        "type": "image_picker",
        "label": "Background"
		},
		 {
        "id": "in_text_box_left_text_mob",
        "type": "html",
        "label": "Add custom text below",
        "default": "<p>Add your text here</p>"
      },
	{
      "id": "in_button_mob",
      "type": "text",
      "label": "Button text"
    },
	{
		"id": "in_button_emoji_mob",
        "type": "image_picker",
        "label": "Button_emoji"
		},
	{
		"id": "about_round_image_right_mob",
        "type": "image_picker",
        "label": "Image"
		},
	{
        "id": "in_video_mob",
        "type": "text",
        "label": "Video name"
      }
    ]
  }
{% endschema %}

