
<!-- content page -->
<section class="bgwhite blog-back p-t-15 p-b-25" {% if article.image %}style="background-image: url({{ article | img_url: 'master' }});"{% endif %}>
  <img src="{{ section.settings.mobile_banner | img_url: 'master' }}" alt="{{ product1.title | escape }}" style="display: none;">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-lg-6 p-b-80">
        <div class="blog-content">
     		 {{ article.content }}
        </div>
      </div>
      <div class="col-md-6 col-lg-6 p-b-80 mobile-hide">
        <div class="play_button">
           <video id="vid" controls>
             <source src="https://cdn.shopify.com/s/files/1/0070/0835/4356/t/69/assets/{{ section.settings.video_link }}" type="video/mp4">
          </video>
          <img src="{{ 'white-play.png' | asset_url }}">
        </div>
      </div>
    </div>
  </div>
</section>

{% for block in section.blocks %}
<section class="back-flower block-{{ block.id }} p-b-40{% if block.settings.img-back == 'left' %} left{% else %} right{% endif %}">
  	{% if forloop.index == 1 %}
      <hr class="golden-dash"/>
    {% endif %}
	<div class="container">
      <div class="row">
        <div class="col-md-12 col-sm-12 col-lg-12 p-b-40 p-t-50">
          <div class="inner-data">
            <h2 class="text-center">{{ block.settings.heading }}</h2>
            <div class="textdata">{{ block.settings.desc }}</div>
            <h4 class="text-center our-pick">Our Favorite Picks:</h4>
          </div>
        </div>
      </div>
      {% assign product1 = all_products[block.settings.pro1] %}
      {% assign product2 = all_products[block.settings.pro2] %}
      {% assign product3 = all_products[block.settings.pro3] %}
      {% assign product4 = all_products[block.settings.pro4] %}
      <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6" data-text="{{ block.settings.pro1 }}">
          <a href="{{ product1.url }}" target="_blank" class="inr-blk">
            <div class="img">
              <div class="reveal">
                 <img class=" lazyload" 
                      src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" 
                      data-src="{{ product1.featured_image.src | img_url: 'large' }}" 
                      alt="{{ product1.featured_image.alt | escape }}"
                      >
                 {% if product1.images[1] %}
                 <img class=" hidden lazyload" 
                      src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" 
                      data-src="{{ product1.images[1] | img_url: 'large' }}" alt="{{ product1.images[1].alt | escape }}" />
                 {% else %}
                   <img class=" hidden lazyload" 
                      src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" 
                      data-src="{{ product1.images.last | img_url: 'large' }}" alt="{{ product1.images.last.alt | escape }}" />      	
                 {% endif %}
              </div>
            </div>
            <h5 class="pro-name">{{ product1.title }}</h5>
            <div class="style-with">Style it with</div>
            <div class="extra-text">{{ block.settings.pro1_text }}</div>
          </a>
        </div>
