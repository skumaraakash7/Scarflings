<style>
	{% for block in section.blocks %}
  		{% if block.settings.img-back == 'left' %}
            .block-{{ block.id }} {
				background-image: url({{ 'flower_left.png' | asset_img_url: 'master' }});
                background-position: left -15% top 12%;
            }
        {% else %}
  			.block-{{ block.id }} {
				background-image: url({{ 'flower_right.png' | asset_img_url: 'master' }});
                background-position: right -15% top 45%;
            }
        {% endif %}
        section.back-flower.block-b073e9f2-7748-4543-9566-449a1907f044 {
            background-position: left -15% top 0;
        }
        .block-{{ block.id }} {
            background-repeat: no-repeat;
            background-size: auto 450px;
        }
  		@media (max-width: 1400px) {
			.block-{{ block.id }} {
                background-size: auto 380px;
            }
          	.block-{{ block.id }}.left {
                background-position: left -17% top 30%;
            }
        }
        @media (max-width: 1200px) {
			.block-{{ block.id }} {
                background-size: auto 300px;
            }
        }
  
  		@media (max-width: 991px) {
          	.block-{{ block.id }} {
                background-size: auto 200px;
                
            }
          
            section.back-flower.block-b073e9f2-7748-4543-9566-449a1907f044 {
                background-position: left -120px top 0;
            }
            .block-{{ block.id }}.right {
				background-position: right -125px top -5px;
            }
            .block-{{ block.id }}.left {
				background-position: left -120px top -1%;
            }
        }
 	    @media (max-width: 576px) {
/*           	.block-{{ block.id }} {
                background-size: auto 150px;
             
            }  */
          	section.back-flower.block-b073e9f2-7748-4543-9566-449a1907f044 {
              	text-align: center;
            }
            .mobile-hide {
                display: none;
            }
        }
  	{% endfor %}
</style>


