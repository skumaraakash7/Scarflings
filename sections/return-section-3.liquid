<section class="refund_section" id="section_k_{{ section.id }}">
    <div class="leftBg" style="background-image:url('{{ section.settings.ret_left_bg | img_url: 'master' }}');
"></div>
	<div class="container">
      <div class="accordion-container">
        <h3>{{ section.settings.refund_head }}</h3>
        {% for block in section.blocks %}

          <div class="set ">
            <a href="javascript:void(0)" class="active">
              {{ block.settings.ret_question }}
              <i class="fa fa-angle-right"></i>
            </a>
            <div class="content">
              <p> {{ block.settings.ret_answer }}</p>
            </div>
          </div>

         {% endfor %}
       </div>
   </div>
</section>
{% schema %}
  {
    "name": "Section 3",
    "settings": [
      {
      "id": "ret_left_bg",
      "type": "image_picker",
      "label": "Left Background"
      }
    ],
	"max_blocks": 20,
	"blocks": [
      {
        "type": "accordian",
        "name": "Accordian",
        "settings": [
         
      {
        "id": "ret_question",
        "type": "html",
        "label": "Question"
      },
		{
        "id": "ret_answer",
        "type": "html",
        "label": "Answer"
      }
        ]
      }
    ]
  }
{% endschema %}

