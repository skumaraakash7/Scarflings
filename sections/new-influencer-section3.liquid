<section class="roundRightImage postCommonsection influencerSection commonSection" id="section_k_{{ section.id }}">
   
	<div class="container">
    	<div class="row">
            <div class="simpletext col-sm-6">
                    <h2 class="desktop_only"> {{ section.settings.in_sec4_heading }} </h2>
                    <p> {{ section.settings.in_sec4_text }} </p>
            </div> 
           <div class="col-sm-6">
        <div class="outer_video">
           <h2 class="mobile_only"> {{ section.settings.in_sec4_heading }} </h2>
                    
          <video id="vid" controls poster="{{ section.settings.in_sec4_poster | img_url: 'master' }}">
            <source src="https://cdn.shopify.com/s/files/1/0070/0835/4356/t/69/assets/{{ section.settings.in_sec4_video }}" type="video/mp4">
          </video>
        </div>
      </div>
      
        </div>
   
    </div>
</section>
