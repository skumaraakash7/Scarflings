{% assign collection = collections['featured-products'] %}
{% assign current_collection = collections['featured-products'] %}
<style>
  .featureprod_section button.slick-arrow.slick-prev {
	padding-right: 60px !important;
	text-align: left;
}

.featureprod_section button.slick-arrow i {
    background: transparent;
    color: #c3862b;
    border: 1px solid #c3862b;
    width: 45px;
    height: 45px;
    display: inline-block;
    font-size: 40px;
    justify-content: center;
    text-align: center;
    border-radius: 50%;
    position: relative;
}
.featureprod_section button.slick-arrow:hover {
     background: transparent !important;
	
}
.featureprod_section button.slick-arrow {
    background: transparent;
    position: absolute;
    width: 100% !important;
    left: 0px;
    bottom: -95px;
    margin: 0 auto;
    top: auto;
    padding: 0px !important;
    height: 70px;
    right: 0px !important;
    left: 0px !important;
    text-align: center !important;
}
.featureprod_section button.slick-arrow.slick-next {
    text-align: left;
    padding-left: 60px !important;
}
.featuredproduct {
    margin: 30px -50px 100px -50px;
}
.featureprod_section a {
	color: #b44b2b;
}

.featureprod_section span {
	color: #000;
}
.featureprod_section .product_desc {
    text-align: center;
    padding: 0px;
}
.featureprod_section img {
    margin-bottom: 15px;
}
  @media (max-width: 767px){
    .featureprod_section button.slick-arrow.slick-prev {
	padding-right: 45px !important;
	text-align: left;
}
.featureprod_section button.slick-arrow {
    bottom: -60px;
}
.featureprod_section button.slick-arrow i {
    width: 35px;
    height: 35px;
  	font-size: 32px;
}
.featureprod_section button.slick-arrow.slick-next {
    text-align: left;
    padding-left: 45px !important;
}
  }
</style>
<section class="featuredproduct bgwhite">
    
    <div class="featureprod_section">
    <!--Featured Product Area Start-->
    <div class="wrap-slick2">
      <div class="slick7">

        
        {% for product in collection.products %}
        
        
        
        
        <div class="item-slick2 p-l-15 p-r-15">
          {% include 'product-grid-item' %}
        </div>
        
        
        {% endfor %}
      </div>
    </div>
    <!--End of Featured Product Area-->
    </div>

</section>
<script>
$(document).ready(function(){
$('.slick7').slick({
              autoplay: true,
            autoplaySpeed: 2000,
              infinite: true,
              slidesToShow: 3,
              slidesToScroll: 1,
              dots: false,
              arrows: true,
          	  responsive: [
          {
            breakpoint: 1024,
            settings: {
              slidesToShow: 3
            }
          },
          {
            breakpoint: 600,
            settings: {
              slidesToShow: 2
            }
          },
          {
            breakpoint: 480,
            settings: {
              slidesToShow: 1
            }
          }
          // You can unslick at a given breakpoint now by adding:
          // settings: "unslick"
          // instead of a settings object
        ]
});
$(".slick7 .slick-prev.slick-arrow").html('<i class="fa fa-angle-left" aria-hidden="true"></i>');
$(".slick7 .slick-next.slick-arrow").html('<i class="fa fa-angle-right" aria-hidden="true"></i>');
  setInterval(function(){
  	$(".slick7 .block2-img img").each(function() {
  var fbtWidth = $(this).width();
  $(this).css("height",fbtWidth);
         
  });
  })
  
});
</script>
