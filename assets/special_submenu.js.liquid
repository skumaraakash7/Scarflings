$( document ).ready(function() {
  $( "li.data-category:not(.child_cate)" ).hover(function() {      
     if($(this).hasClass('parent')){
       
       $(this).parent().siblings('.border_class').fadeIn( 500 );
      	$(this).parent().siblings('ul').fadeIn( 500 ).addClass('active'); // show submenu 
        $(this).parents('.shop_sub_menu_list').addClass('columns2'); // mange width of columns
         if($(this).parents('.shop_sub_menu_list').hasClass('columns2')){
          $('.shop_sub_menu_prod_col').css('padding','10px 20px'); // modify css for childrens products
         }       
        $('ul.active li:first-child').trigger('mouseenter');       // active first children on first hover
      }else{
     $(this).parent().siblings('ul.active').hide();
               $(this).parent().siblings('.border_class').hide();
      $(this).parents('.shop_sub_menu_list').removeClass('columns2');
      } 
  });
});